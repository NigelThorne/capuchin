#!/usr/bin/env ruby

$: << File.join(File.dirname(File.dirname(__FILE__)), "lib")

require "capuchin"

if ARGV.empty?
  $stderr.puts "Need at least one file!"
  exit 1
end

cx = Capuchin::Context.new
first_filename = nil
parsed = []

next_is_expr = false
ARGV.each do |arg|
  # SunSpider compatibility
  next if arg == '-f'

  if arg == '-e'
    next_is_expr = true
    next
  end

  if next_is_expr
    parsed << cx.parse_expression(arg, '-e')
  else
    first_filename ||= arg
    parsed << cx.parse(arg)
  end

  next_is_expr = false
end

cx.compile(parsed, first_filename || '?').call

